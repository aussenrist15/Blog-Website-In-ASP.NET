<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item active" onclick="profile();" id="PROFILE">
                <a class="nav-link" id="name" href="/User/Profile">Profile</a>
            </li>
            <li class="nav-item" onclick="blogs();" id="BLOGS">
                <a class="nav-link" href="/Blog/Index">Blogs</a>
            </li>
            <li class="nav-item" >
                <a class="nav-link" href="/User/Logout">Logout</a>
            </li>
            
        </ul>
    </nav>

    <div>

        @RenderBody()
    </div>
    <script>
        function getCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                    return c.substring(name.length, c.length);
                }
            }
            return "";
        }
        const name = getCookie("user_name");
        if (name !== "") {
            document.getElementById("name").innerHTML = name;
        }
        const path = window.location.pathname;
        if (path.includes("Profile")) {
            document.getElementById("BLOGS").classList.remove("active");
            document.getElementById("PROFILE").classList.add("active");
        }
        if (path.includes("Blog")) {
            document.getElementById("PROFILE").classList.remove("active");
            document.getElementById("BLOGS").classList.add("active");
        }

      
    </script>
</body>
</html>